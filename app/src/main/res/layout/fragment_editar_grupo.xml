<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="25dp"
    android:background="@color/lightGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_tittle_box_vertical"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_title"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver"
            android:src="@android:drawable/ic_menu_revert" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTripTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Viaje a Cocorit"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnEditTitle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="@android:color/white"
                android:text="Editar"
                android:gravity="center"
                android:textStyle="bold"
                android:src="@android:drawable/ic_menu_edit" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miembros del grupo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtCopyLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copiar enlace"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_account"
                android:layout_marginEnd="10dp"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/memberJuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Juan Daniel Castro"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/btnDeleteJuan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="invisible"

                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar miembro"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

            <!-- Miembro Diego -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_account"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/memberDiego"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Diego Hernandez"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <!-- Botón para eliminar usuario -->
                <ImageButton
                    android:id="@+id/btnDeleteDiego"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="?android:attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Miembro Joel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_account"
                    android:layout_marginEnd="10dp"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/memberJoel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Joel Lopez Cota"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <!-- Botón para eliminar usuario -->
                <ImageButton
                    android:id="@+id/btnDeleteJoel"
                    android:layout_width="40dp"
                    android:visibility="invisible"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:background="?android:attr/selectableItemBackgroundBorderless" />
            </LinearLayout>


        <!-- Eliminar grupo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <ImageButton
                android:id="@+id/btnDeleteGroup"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar Grupo"
                android:src="@android:drawable/ic_menu_delete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar Grupo"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
