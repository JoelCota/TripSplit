<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical"
    android:paddingTop="25dp"
    tools:context=".MainActivity">

    <!-- Encabezado con Gradiente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_title"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Nombre del grupo centrado -->
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inter"
            android:paddingLeft="10dp"
            android:text="Alma Leticia Chavez "
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Fotografía del lado derecho -->
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="25dp"
            android:src="@drawable/ic_account" /> <!-- Reemplaza ic_profile con tu imagen -->

    </LinearLayout>

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/box_content"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Botón para Reporte de Viajes -->
        <Button
            android:id="@+id/btnReporteViajes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporte de Viajes"
            android:layout_marginBottom="16dp" />

        <!-- Botón para Cerrar Sesión -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

</LinearLayout>
