<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white">

        <!-- Nombre del gasto -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del gasto"
            android:textSize="14sp"
            android:textColor="#666666" />
        <EditText
            android:id="@+id/editTextNombreGasto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej. Cena en restaurante"
            android:inputType="textCapSentences"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:textSize="16sp" />

        <!-- Cantidad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cantidad"
            android:textSize="14sp"
            android:textColor="#666666" />
        <EditText
            android:id="@+id/editTextCantidadGasto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej. 500.00"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@drawable/bg_input"
            android:textSize="16sp" />

        <!-- Moneda -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Moneda"
            android:textSize="14sp"
            android:textColor="#666666" />
        <Spinner
            android:id="@+id/spinnerMoneda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:padding="12dp" />

        <!-- Categoría -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Categoría"
            android:textSize="14sp"
            android:textColor="#666666" />
        <Spinner
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:padding="12dp" />

        <!-- Pagado por -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Pagado por"
            android:textSize="14sp"
            android:textColor="#666666" />
        <Spinner
            android:id="@+id/spinnerPagadoPor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:padding="12dp" />

        <!-- Dividido entre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Dividir entre"
            android:textSize="14sp"
            android:textColor="#666666" />
        <TextView
            android:id="@+id/txtDivididoEntre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Seleccionar usuarios"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@drawable/bg_input"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</ScrollView>
